<?xml version='1.0'?>
<!-- basicjetbot // URDF MODEL DEFINITION -->

<robot name="basicjetbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find basicjetbot_description)/urdf/basicjetbot.gazebo" />

  <!-- CHASSIS -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size=".135 .083 .063"/>
      </geometry>
    </visual>

    <collision name="chassis_collision">
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size=".135 .083 .063"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0.01 0 0.05"/>
      <mass value="0.837"/>
      <inertia ixx="0.0007576" ixy="0" ixz="0" iyy="0.0015486" iyz="0" izz="0.0017524"/>
    </inertial>

    <!-- CASTER -->
    <visual name = "caster">
      <origin xyz="-0.0508 0 0.0117"/>
      <geometry>
        <sphere radius="0.0117"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="-0.0508 0 0.0117"/>
      <geometry>
        <sphere radius="0.0117"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </link>

  <!-- WHEELS -->
  <link name="left_wheel">
    <visual>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.009"/>
      </geometry>
    </visual>

    <collision>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.009"/>
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0 1.5707 1.5707"/>
      <mass value="0.03"/>
      <inertia ixx="0.00000693" ixy="0.0" ixz="0.0" iyy="0.00000693" iyz="0.0" izz="0.00001346"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.009"/>
      </geometry>
    </visual>

    <collision>
      <origin rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.03" length="0.009"/>
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0 1.5707 1.5707"/>
      <mass value="0.03"/>
      <inertia ixx="0.00000693" ixy="0.0" ixz="0.0" iyy="0.00000693" iyz="0.0" izz="0.00001346"/>
    </inertial>
  </link>

  <!-- MOTORS -->
  <joint type="continuous" name="left_motor">
    <origin xyz="0.03 0.057 0.03"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint type="continuous" name="right_motor">
    <origin xyz="0.03 -0.057 0.03"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
